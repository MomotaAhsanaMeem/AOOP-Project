<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.algoarena.client.Level2Controller">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../images/bg2.png" />
            </image>
        </ImageView>

        <!-- Game Pane for interactive elements -->
        <Pane fx:id="gamePane" prefHeight="600.0" prefWidth="900.0">
            <children>
                <!-- Character -->
                <ImageView fx:id="characterImage" fitHeight="80.0" fitWidth="80.0" layoutX="50.0" layoutY="400.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" />

                <!-- Back to Menu Button (Top Left Corner) -->
                <Button mnemonicParsing="false" onAction="#handleBackToMenu" layoutX="20.0" layoutY="20.0" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold;" text="Back to Menu" />

                <!-- Centered Top UI Elements -->
                <VBox alignment="CENTER" layoutX="200.0" layoutY="15.0" prefWidth="500.0" spacing="10.0">
                    <children>
                        <Label fx:id="levelLabel" text="Level 2: Advanced Stack Master" textFill="#FFD700" alignment="CENTER" style="-fx-font-weight: bold;">
                            <font>
                                <Font name="Lucida Console" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="instructionLabel" prefWidth="480.0" text="Welcome to Level 2! Click the character to begin the Advanced Stack Challenge." textFill="WHITE" wrapText="true" alignment="CENTER" style="-fx-font-weight: bold;">
                            <font>
                                <Font name="Lucida Console" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Interactive Stack Challenge Modal -->
                <VBox fx:id="stackModal" alignment="CENTER" layoutX="75.0" layoutY="30.0" prefHeight="540.0" prefWidth="750.0" spacing="15.0" style="-fx-background-color: rgba(10, 10, 40, 0.95); -fx-border-color: #FF6B35; -fx-border-width: 4px; -fx-padding: 20px; -fx-background-radius: 15px; -fx-border-radius: 15px;" visible="false">
                    <children>
                        <Label text="ADVANCED STACK CHALLENGE" textFill="#FF6B35">
                            <font>
                                <Font name="Lucida Console" size="20.0" />
                            </font>
                        </Label>

                        <Label fx:id="stackQuestionLabel" prefWidth="700.0" text="Execute these stack operations step by step. Drag elements to build the final stack state: PUSH(15), PUSH(7), PUSH(23), POP(), PUSH(9), POP(), PUSH(11), PUSH(4), POP(), PUSH(18), POP(), POP()" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="Lucida Console" size="12.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: 20px;">
                            <children>
                                <!-- Available Elements Pool -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Available Elements:" textFill="#FFD700">
                                            <font>
                                                <Font name="Lucida Console" size="14.0" />
                                            </font>
                                        </Label>
                                        <VBox fx:id="elementsPool" alignment="CENTER" prefHeight="300.0" prefWidth="120.0" spacing="8.0" style="-fx-background-color: rgba(100, 100, 100, 0.3); -fx-border-color: #888888; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 10px;">
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- Stack Visualization Area -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Build the Final Stack:" textFill="#FFD700">
                                            <font>
                                                <Font name="Lucida Console" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label text="(Bottom to Top)" textFill="#FFD700">
                                            <font>
                                                <Font name="Lucida Console" size="10.0" />
                                            </font>
                                        </Label>
                                        <VBox fx:id="stackArea" alignment="BOTTOM_CENTER" prefHeight="300.0" prefWidth="150.0" spacing="2.0" style="-fx-background-color: rgba(0, 50, 100, 0.4); -fx-border-color: #4CAF50; -fx-border-width: 3px; -fx-border-radius: 5px; -fx-padding: 5px;">
                                        </VBox>
                                        <Label text="↑ TOP" textFill="#4CAF50">
                                            <font>
                                                <Font name="Lucida Console" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label text="BOTTOM ↓" textFill="#4CAF50">
                                            <font>
                                                <Font name="Lucida Console" size="12.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Operation History (No Answers) -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Execute Operations:" textFill="#FFD700">
                                            <font>
                                                <Font name="Lucida Console" size="14.0" />
                                            </font>
                                        </Label>
                                        <VBox prefHeight="300.0" prefWidth="200.0" spacing="5.0" style="-fx-background-color: rgba(0,0,0,1); -fx-border-color: #666666; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 10px;">
                                            <children>
                                                <Label text="1. PUSH(15)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="2. PUSH(7)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="3. PUSH(23)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="4. POP()" textFill="#FF6B6B">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="5. PUSH(9)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="6. POP()" textFill="#FF6B6B">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="7. PUSH(11)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="8. PUSH(4)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="9. POP()" textFill="#FF6B6B">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="10. PUSH(18)" textFill="WHITE">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="11. POP()" textFill="#FF6B6B">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="12. POP()" textFill="#FF6B6B">
                                                    <font>
                                                        <Font name="Courier New" size="14.0" />
                                                    </font>
                                                </Label>
                                                <Label text="" textFill="#FFD700">
                                                    <font>
                                                        <Font name="Courier New" size="11.0" />
                                                    </font>
                                                </Label>
                                                <Label text="Trace each step carefully!" textFill="#FFD700">
                                                    <font>
                                                        <Font name="Courier New" size="11.0" />
                                                    </font>
                                                </Label>
                                                <Label text="LIFO = Last In, First Out" textFill="#FFD700">
                                                    <font>
                                                        <Font name="Courier New" size="11.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="checkStackButton" onAction="#handleCheckStack" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Check Answer" />
                                <Button fx:id="resetStackButton" onAction="#handleResetStack" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Reset" />
                                <Button fx:id="cancelStackButton" onAction="#handleCancelStack" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Cancel" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Level Complete Modal -->
                <VBox fx:id="completionModal" alignment="CENTER" layoutX="200.0" layoutY="200.0" prefHeight="200.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: rgba(0, 100, 0, 0.9); -fx-border-color: #4CAF50; -fx-border-width: 3px; -fx-padding: 30px; -fx-background-radius: 15px; -fx-border-radius: 15px;" visible="false">
                    <children>
                        <Label text="Level 2 Complete!" textFill="WHITE">
                            <font>
                                <Font name="Lucida Console" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Exceptional! You've conquered the advanced stack operations!" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="Lucida Console" size="12.0" />
                            </font>
                        </Label>
                        <Button onAction="#handleProceedToLevel3" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Continue to Level 3" />
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
</Pane>
